modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["c-ares", "grpc", "libuv", "libyaml", "openssl", "pkg-config", "zlib"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Install Dependencies"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Enhanced Webhook Bot"

[[workflows.workflow]]
name = "Install Dependencies"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install base58==2.1.1 borsh-construct==0.1.0 construct==2.10.67 construct-typing==0.5.2 solana==0.36.6 solders==0.26.0 websockets==15.0 python-dotenv==1.0.1 aiohttp==3.11.13 grpcio==1.71.0 grpcio-tools==1.71.0 protobuf==5.29.4 pyyaml==6.0.2 uvloop==0.21.0"

[[workflows.workflow]]
name = "Enhanced Webhook Bot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python webhook_with_memory.py"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true
